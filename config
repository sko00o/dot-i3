# shutdown actions
mode "[s]air, [d]esligar, [r]einiciar, [s]uspender" {
	bindsym s exec i3-msg exit
	bindsym d exec systemctl poweroff
	bindsym r exec systemctl reboot
	bindsym s exec systemctl suspend
	bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Mod1+e mode "[s]air, [d]esligar, [r]einiciar, [s]uspender"

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bindsym $mod+m bar mode toggle
bar {
        font pango:DejaVu, FontAwesome 12
        tray_output none
        status_command i3status -c /home/shank/.config/i3/i3status/config
        i3bar_command i3bar -t
        position bottom
        separator_symbol " | "
        strip_workspace_numbers no
        colors {
                statusline		$cinza
                background		$transparente
                separator		$cinza

                focused_workspace	$transparente	$transparente	$branco
                inactive_workspace	$transparente	$transparente	$cinza
                urgent_workspace	$transparente	$transparente	$texto-urgente		
        }
}

# locakscreen
bindsym $mod+shift+x exec --no-startup-id i3lock -i '/home/shank/Pictures/lockscreen.jpg'

# file manager
bindsym $mod+e exec thunar

# Volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master 5%+ 
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master 5%-

# brightness control
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

# music play control
# Next Song
bindsym Mod1+ctrl+bracketright exec --no-startup-id cmus-remote --next && pkill --signal SIGRTMIN+13 i3blocks
# Prev Song
bindsym Mod1+ctrl+bracketleft exec --no-startup-id cmus-remote --prev && pkill --signal SIGRTMIN+13 i3blocks
# Play Pause
bindsym Mod1+ctrl+backslash exec --no-startup-id cmus-remote --pause && pkill --signal SIGRTMIN+13 i3blocks

# startup
# wallpaper
exec_always --no-startup-id feh --bg-fill '/home/shank/Pictures/wallpaper.jpg'
# config check
exec i3-config-wizard
# default workspace
exec --no-startup-id i3-msg $workspace1
# touchpad initial
exec --no-startup-id synclient VertScrollDelta=-39 HorizTwoFingerScroll=1 TapButton1=1 TapButton2=3 TapButton3=2
# windows effect
exec --no-startup-id exec compton &
# shadowsocks-qt5
exec ss-qt5 &
# ibus input
exec_always GTK_IM_MODULE=ibus XMODIFIERS=@im=ibus QT_IM_MODULE=ibus ibus-daemon -drx
